# Start continous acqusition
#
record (bo, "$(DEVICE):START_CONT_ACQUISITION_CMD") {
   field (DESC, "Start acquisition")
   field (SCAN, "Passive")
   field (DTYP, "asynInt32")
   field (OUT,  "@asyn($(PORT),0,0) CACQSTART")
   field (VAL,  "0")
   field (HIGH, "0.5")                          # keep high for 0.5s)
}

